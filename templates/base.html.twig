<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Heiner Leiska | Photography{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('build/js/app.css') }}"/>
        {% endblock %}

        {% block fonts %}
        <link href="{{ asset('build/fonts/TSTAR-Bold.css') }}" rel="stylesheet">
        <link href="{{ asset('build/fonts/TSTAR-Regular.css') }}" rel="stylesheet">
        <link href="{{ asset('build/fonts/TSTAR-Heavy.css') }}" rel="stylesheet">
        <link href="{{ asset('build/fonts/TSTAR-Italic.css') }}" rel="stylesheet">
        {% endblock %}

        {% block meta %}
        <meta name="viewport" content="initial-scale=1, maximum-scale=1">
        {% endblock %}

        {% block scripts %}
        {% endblock %}
    </head>
    <body>

    <div class="global">

    {% block sidebar %}
        <div class="sidebar">
            <div class="navigation">
                <a href="{{ path('IndexRoute') }}" class="logo">HEINER <span class="bold">LEISKA</span></a>
                <nav class="main">
                    <a href="
                        {{ path('ProjectsRoute') }}"
                            {% if app.request.attributes.get( '_route' )
                                starts with 'ProjectsRoute' or 'GalleryRoute' %} class="active"
                            {% endif %}>
                        Photographs</a>
                    <a href="
                        {{ path('AboutRoute') }}"
                            {% if app.request.attributes.get( '_route' )
                                starts with 'AboutRoute' %} class="active"
                            {% endif %}>
                        About</a>
                </nav>
            </div>
            {% block sideinfo %}{% endblock %}

        </div>
    {% endblock %}

        {% block content %}{% endblock %}
    </div>

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('build/js/app.js') }}"></script>
        <script src="http://rubaxa.github.io/Sortable/Sortable.js"></script>
    {% endblock %}

    </body>
</html>
